<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SCPDetailActivity">

    <!-- SCP Title -->
    <TextView
        android:id="@+id/textViewSCPTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="SCP-001: The Prototype" />

    <!-- SCP Classification -->
    <TextView
        android:id="@+id/textViewSCPClassification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSCPTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Classification: Euclid" />

    <!-- SCP Rating -->
    <TextView
        android:id="@+id/textViewSCPRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSCPClassification"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Rating: 4321" />

    <!-- SCP Description -->
    <TextView
        android:id="@+id/textViewSCPDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSCPRating"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="This is a detailed description of SCP-001." />

    <!-- SCP Image -->
    <ImageView
        android:id="@+id/imageViewSCP"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSCPDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <!-- SCP Tales Header -->
    <TextView
        android:id="@+id/textViewSCPTalesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewSCP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Related Tales:" />

    <!-- SCP Tales List -->
    <LinearLayout
        android:id="@+id/linearLayoutSCPTales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSCPTalesHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Individual tale entries will be added dynamically -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
